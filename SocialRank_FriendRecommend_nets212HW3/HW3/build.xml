<?xml version="1.0"?>
<project name="nets212-hw3" basedir="." default="usage">
	<property file="build.properties"/>

	<property name="hadoop.home" value="/opt/hadoop/share"/>
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="bin"/>

	<path id="master-classpath">
		<fileset dir="${hadoop.home}">
			<include name="**/*.jar"/>
		</fileset>
		<pathelement path="${build.dir}"/>
	</path>

	<target name="usage">
		<echo message=""/>
		<echo message="${name} build file"/>
		<echo message="-----------------------------------"/>
		<echo message=""/>
		<echo message="Available targets are:"/>
		<echo message=""/>
		<echo message="build     --> Build the application"/>
	</target>

	<target name="build" description="Compile main source tree java files">
		<mkdir dir="${build.dir}/classes"/>
		<javac destdir="${build.dir}/classes" source="1.5" target="1.5" debug="true" deprecation="false" optimize="false" failonerror="true">
			<src path="${src.dir}"/>
			<classpath refid="master-classpath"/>
		</javac>
	</target>

	<target name="jar" description="build the jar" depends="build">
		<jar destfile="job.jar"
		       basedir="${build.dir}/classes"/>
	</target>	

	<target name="source" description="build the source zip" depends="build">
		<zip destfile="hw3.zip"
		       basedir="${src.dir}"/>
	</target>	
</project>